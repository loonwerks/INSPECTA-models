	$(LD) $(LDFLAGS) -L ${CRATES_DIR}/seL4_ArduPilot_ArduPilot/target/aarch64-unknown-none/release $(filter %.o, $^) $(LIBS) -lseL4_ArduPilot_ArduPilot -o $@

