        guarantee hlr_18_rx0_can_send_mavlink_udp:
          ((HasEvent(EthernetFramesRxIn0) && valid_ipv4_udp_mavlink(EthernetFramesRxIn0)) ->: 
            (HasEvent(MavlinkOut0) && (EthernetFramesRxIn0 == MavlinkOut0) && NoSend(VmmOut0)));
