            valid_ipv4_udp(frame) && udp_is_mavlink_port(frame);
            
          def allow_outbound_frame(frame: RawEthernetMessage): Base_Types::Boolean :=
            valid_arp(frame) ||
            valid_ipv4_udp_mavlink(frame) ||
            valid_ipv4_udp_port(frame);
         
            
