                            (! Port2_RxFirewall_blocked) && (! Port3_RxFirewall_blocked));
    AggressiveAttacks: G[0,4] (Port0_RxFirewall_blocked && Port1_RxFirewall_blocked && 
                            Port2_RxFirewall_blocked && Port3_RxFirewall_blocked);
                            
