    Port1_RxFirewall_blocked := RxDriver1_active -> (! RxArduPilot1_active);
    Port2_RxFirewall_blocked := RxDriver2_active -> (! RxArduPilot2_active);
    Port3_RxFirewall_blocked := RxDriver3_active -> (! RxArduPilot3_active);
    RxPortsBlocked := {Port0_RxFirewall_blocked, Port1_RxFirewall_blocked, Port2_RxFirewall_blocked, Port3_RxFirewall_blocked};

FTSPEC
